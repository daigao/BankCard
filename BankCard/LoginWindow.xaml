<Window x:Class="BankCard.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankCard"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="300" FontSize="16">
    <Border Margin="10">
        <StackPanel>
            <Label Content="账号："/>
            <TextBox x:Name="tbxAccount"/>
            <Label Content="密码："/>
            <PasswordBox x:Name="tbxPassword" PasswordChar="*"/>
            <Label Content="服务器："/>
            <TextBox x:Name="btxServerAddress"/>
            <Label Content="端口："/>
            <TextBox Width="50" Text="995" HorizontalContentAlignment="Center" HorizontalAlignment="Left"/>
            <Button Width="150" Content="保存" Margin="0 20"/>
        </StackPanel>
    </Border>
</Window>
